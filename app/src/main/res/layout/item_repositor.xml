<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardUseCompatPadding="true">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/image_user"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
                android:text="TextView"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="5dp"
                android:id="@+id/txt_rating"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
        <TextView
                android:text="Name Repo"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_name_repo"
                app:layout_constraintStart_toEndOf="@+id/image_user" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/image_user" app:layout_constraintEnd_toStartOf="@+id/imageView2"
                android:layout_marginEnd="8dp" android:textSize="18sp"/>
        <TextView
                android:text="url"
                android:textStyle="italic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_create" app:layout_constraintStart_toEndOf="@+id/image_user"
                android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView2" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_name_repo"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_name_user"
                app:layout_constraintTop_toBottomOf="@+id/image_user" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/txt_create"
                android:layout_marginEnd="8dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_arrow_right"
                android:id="@+id/imageView2" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_update"
                app:layout_constraintStart_toEndOf="@+id/image_user" android:layout_marginStart="16dp"
                app:layout_constraintEnd_toStartOf="@+id/imageView2" android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_create"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
